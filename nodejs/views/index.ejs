<div class="jumbotron">
  <div class="container">
    <h1>選挙の結果を大発表！</h1>
  </div>
</div>
<div class="container">
  <h2>個人の部</h2>
  <div id="people" class="row">
    <% candidates.forEach((candidate, i)=>{ %>
      <div class="col-md-3">
        <div class="panel panel-default">
          <div class="panel-heading">
            <p><% if(i < 10){ %><%= i + 1 %><% }else{ %><%= '最下位' %><% } %>. <a href="/candidates/<%= candidate['id'] %>"><%= candidate['name'] %></a></p>
          </div>
          <div class="panel-body">
            <p>得票数: <%= candidate['count'] || 0 %></p>
            <p>政党: <%= candidate['political_party'] %></p>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
  <h2>政党の部</h2>
  <div id="parties" class="row">
    <% Object.keys(parties).sort((a,b)=>parties[a] < parties[b]).forEach((partyName, i)=>{ const count = parties[partyName]%>
      <div class="col-md-3">
        <div class="panel panel-default">
          <div class="panel-heading">
            <p><%= i + 1 %>. <a href="/political_parties/<%= partyName %>"><%= partyName %></a></p>
          </div>
          <div class="panel-body">
            <p>得票数: <%= count || 0 %></p>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
  <h2>男女比率</h2>
  <div id="sex_ratio" class="row">
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <p>男性</p>
        </div>
        <div class="panel-body">
          <p>得票数: <%= sexRatio['男'] %></p>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <p>女性</p>
        </div>
        <div class="panel-body">
          <p>得票数: <%= sexRatio['女'] %></p>
        </div>
      </div>
    </div>
  </div>
</div>
